                byMonth: 0//$('input[name=ClassifyBy]:checked').val()
            },
            success: function (result) {
                debugger;
                clearCharts();
                
                init_dashboard_echarts(result);
                $("#dashLoader").css("display", "none");
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                debugger;
            }
        });
    }
