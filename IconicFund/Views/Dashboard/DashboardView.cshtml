    function extractData() {
        debugger;
        var secLevel = '';
        $(".SecurityLevelData").each(function (i, obj) {
            if (obj.checked) {
                secLevel += obj.attributes['data-id'].value + ',';
            }
        });
        if (secLevel == '')
        { secLevel = '-1' }
        var PriorityLevel = '';
        $(".PriorityLevelData").each(function (i, obj) {
            var checkAll = true;
            //debugger
            //    if (obj.checked == false) {
            //        obj.parent('li').parent('ul').find("li:first-child input").prop('checked', false);
            //    }
            
