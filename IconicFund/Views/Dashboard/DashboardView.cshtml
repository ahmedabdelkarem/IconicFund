                PriorityLevel += obj.attributes['data-id'].value + ',';
            }
        });
        if (PriorityLevel == '')
        { PriorityLevel = '-1' }
        var TopicKind = '';
        $(".TopicKindData").each(function (i, obj) {
            if (obj.checked) {
                TopicKind += obj.attributes['data-id'].value + ',';
            }

        });
        if (TopicKind == '')
        { TopicKind = '-1' }
        var CorrespondenceInboxStatus = '';
        $(".CorrespondenceInboxStatusData").each(function (i, obj) {
            if (obj.checked) {
                CorrespondenceInboxStatus +=obj.attributes['data-id'].value + ',';
            }

        });
        if (CorrespondenceInboxStatus == '')
        { CorrespondenceInboxStatus = '-1' }
        var CorrespondenceStatus = '';
        $(".CorrespondenceStatusData").each(function (i, obj) {
            if (obj.checked) {
                CorrespondenceStatus += obj.attributes['data-id'].value + ',';
            }
        });
        if (CorrespondenceStatus == '')
        { CorrespondenceStatus = '-1' }
