    function DashBoardCharts(id, departments, TopicKindId, PriorityId, CorrespondenceStatus, CorrespondenceInboxStatus, securityLevel, FromDate, ToDate) {
        debugger;
        $.ajax({
            url: ActionReturnDashBoardClassification,
            type: 'GET',
            data: {
                Id: id,
                departments: departments,
                TopicKindId: TopicKindId,//$("#TopicKindId").val(),
                PriorityId: PriorityId,//$("#PriorityId").val(),
