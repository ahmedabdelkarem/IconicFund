        if (id <= 0) {
            id = null;
        }
        debugger;
        var datefrom = $("#FromDate").val();//dd/mm/yy
        var dateto = $("#ToDate").val();
        var datefromSplited = $("#FromDate").val().split('/');//dd/mm/yy
        var datetoSplited = $("#ToDate").val().split('/');
        var datetofinal = new Date(datetoSplited[2], datetoSplited[1], datetoSplited[0]); //Year, Month, Date
